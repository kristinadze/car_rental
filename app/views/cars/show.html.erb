<section class="page"><div class="centered-box">
  
  <%= image_tag @car.image, style: "height: 83vh; width: 98%;" %>
  <div class="div-edit">
    <% if @car.owner == current_user %>
      <a href="<%= edit_car_url(@car) %>">Edit <%= @car.name %></a>
    <% end %>
  </div>
  

  <div class="main-show-container">

      <div class="container-1">

        <h1 class="h1-show"><%= @car.name.capitalize + " " %><%= @car.year%></h1>
        
        <p class="p-attr p-attr-2"><%= image_tag 'gas-station.png', style: 'width: 5%; display: inline;' %> <%= @car.gas.capitalize %> </p>
        <br>
        <br>
        <p class="p-attr p-attr-2 p-attr-3"><%= image_tag 'car-door.png', style: 'width: 7%; display: inline; padding-right: 3%;' %><%= @car.doors %> doors </p> <br><br>
        <p class="p-attr"><%= image_tag 'seat.png', style: 'width: 6%; display: inline; margin-left: -1%;' %><%= @car.seats %> seats </p> <br> 
        
     

        <h2 class="h2-host"> HOSTED BY </h2>
        <div class="div-host">
          <%= image_tag 'user.png', style: 'width: 9%; display: inline; padding-left: 1%' %>
          <p class="p-host-name"><%= @car.owner.username.capitalize %> <br>
          <span class="all-star-host">All-Star Host </span></p>
        </div>
    
        <div class="div-image-with-content">
            <%= image_tag 'gloves.png', style: 'width: 5%; display: inline;' %>

            <div class="buttons-and-text">
                <p class="p-attr p-attr-2"><%= @car.owner.username.capitalize %> has completed training on enhanced cleaning and disinfection practices. </p>

                      <!-- Button trigger modal -->
                
                <button type="button" class="learn-more-button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                  Learn more
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <%# <h5 class="modal-title" id="exampleModalLabel">Cleaning & disinfection training </h5> %>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                      <%= image_tag 'cleaning.png' %>
                      <p class="p-host-name"> Cleaning & disinfection training  </p> <br>
                        This host has completed training on enhanced cleaning and disinfection practices that use the latest recommendations compiled from the CDC, EPA, WHO, and vehicle detailing experts.
                      </div>
                    </div>
                  </div>
                </div>
                
            </div>
        </div>


      <br>
      <br>
      <h2 class="h2-host"> DESCRIPTION </h2>

      <p class="p-attr p-attr-2"><%= @car.year %></p>
      <p class="p-attr p-attr-2"><%= @car.name %></p> 
      <br>
      <br>
      

      <div id="div-answer-show-page">
        <%= @car.description %>       
      </div>
        <button id="more"">More</button>
        <button id="less"">Less</button>



       <h2 class="h2-host"> FEATURES </h2>
       <div id="div-features">
          <p>Must be 21+ to book</p>
          <p>Automatic transmission</p>
          <p>AUX input</p>
          <p>Backup camera</p>
          <p>Blind spot warning</p>
          <p>Bluetooth</p>
          <p>GPS</p>
          <p>Heated seats</p>
          <p>Long-term car</p>
          <p>Pet friendly</p>
          <p>USB charger</p>
       </div>

        <button id="more-2">More</button>
        <button id="less-2">Less</button>

   </div>

      <div class="container-2">

        <h1>Rental Requests</h1>
        <% if @car.rental_requests.empty? %>
          <p><%= @car.name %> has no rental requests.</p>
        <% else %>
          <table>
            <tr>
              <th>User</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Status</th>
            </tr>
            <% @car.rental_requests.order('start_date').each do |req| %>
              <%= render 'req_tr', req: req %>
            <% end %>
          </table>
        <% end %>

        <% if logged_in? %>
          <a href="<%= new_car_rental_request_url(car_id: @car.id) %>">Make new request</a>
        <% end %>
      </div>
  </div>


<br>
<br>
<br>
<br>
<br>
  

  

  
</div></section>

<script type="text/javascript">


    $('#more').click(function(e) {
      $('#more').css({
        'display': 'none'
      })
    e.stopPropagation();

    $('#less').css({
      'display': 'inline'
    })

    $('#div-answer-show-page').css({
        'height': 'auto',
        'opacity': 1
    })
});

   $('#less').click(function(e) {
      $('#more').css({
        'display': 'inline'
      })
    e.stopPropagation();

    $('#less').css({
      'display': 'none'
    })

    $('#div-answer-show-page').css({
        'height': '50px',
        'opacity': 0.33
    })
});

$(document).click(function() {
    $('#div-answer-show-page').css({
        'height': '50px',
        'opacity': 0.33
    })
})






$('#more-2').click(function(e) {
      $('#more-2').css({
        'display': 'none'
      })
    e.stopPropagation();

    $('#less-2').css({
      'display': 'inline'
    })

    $('#div-features').css({
        'height': 'auto',
        'opacity': 1
    })
});

   $('#less-2').click(function(e) {
      $('#more-2').css({
        'display': 'inline'
      })
    e.stopPropagation();

    $('#less-2').css({
      'display': 'none'
    })

    $('#div-features').css({
        'height': '50px',
        'opacity': 0.33
    })
});

$(document).click(function() {
    $('#div-features').css({
        'height': '50px',
        'opacity': 0.33
    })
})

</script>