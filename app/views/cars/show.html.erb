<h1><%= @car.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:year, :mpg, :doors, :gas, :seats].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @car.send(attr_name) %></td>
    </tr>
  <% end %>
</table>

<a href="<%= edit_car_url(@car) %>">Edit <%= @car.name %></a>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @car.rental_requests.order('start_date').each do |req| %>
    <%= render 'req_tr', req: req %>
  <% end %>
</table>
