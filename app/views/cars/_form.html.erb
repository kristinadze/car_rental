<% action = (car.persisted? ? car_url(car) : cars_url) %>
<% method = (car.persisted? ? :patch : :post) %>

<%= form_for (@car) do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :year %>
  <%= f.text_field :year %><br>

  <%= f.label :mpg %>
  <%= f.text_field :mpg %><br>

  <%= f.label :doors %>
  <%= f.text_field :doors %><br>

  <%= f.label :gas %>
  <%= f.text_field :gas %><br>

  <%= f.label :seats %>
  <%= f.text_field :seats %><br>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.submit %>
<% end %>
